{
  "name": "standard-schema",
  "version": "0.10.8",
  "description": "Runtime type validation",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "bin": {
    "standard-schema": "dist/bin/index"
  },
  "scripts": {
    "lint": "tslint \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "test:watch": "jest --watch",
    "test:spec": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s test:spec",
    "prepublish": "typings install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/standard-schema/javascript.git"
  },
  "keywords": [
    "schema",
    "standard",
    "data",
    "json",
    "validation",
    "types",
    "runtime",
    "serialize"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/standard-schema/javascript/issues"
  },
  "homepage": "https://github.com/standard-schema/javascript",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*\\.(?:test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "istanbul": "^0.4.3",
    "jest": "^19.0.2",
    "rimraf": "^2.5.4",
    "ts-jest": "^19.0.0",
    "tslint": "^5.0.0",
    "tslint-config-standard": "^5.0.0",
    "typescript": "~2.2.1",
    "typings": "^2.1.0"
  },
  "dependencies": {
    "arrify": "^1.0.1",
    "jsonld": "^0.4.11"
  }
}
